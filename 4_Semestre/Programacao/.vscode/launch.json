{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C/C++ Debug (g++)",
      "type": "cppdbg",
      "request": "launch",
      // A linha mais importante: aponta para o .exe com o mesmo nome do .cpp, na mesma pasta
      "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      // Verifique se este caminho para o gdb.exe está correto para sua instalação
      "miDebuggerPath": "C:\\msys64\\ucrt64\\bin\\gdb.exe",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      // MÁGICA: Esta linha executa a tarefa de build automaticamente antes de depurar!
      "preLaunchTask": "C/C++ build active file"
    }
  ]
}